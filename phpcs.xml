<?xml version="1.0"?>
<ruleset name="CPF/CNPJ Validator">
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="45"/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>

    <!-- Ignore warnings and show progress of the run -->
    <arg value="nps"/>

    <!-- Folders that will be tracked -->
    <file>./tests</file>
    <file>./Transaction</file>

    <rule ref="LeroyMerlin"/>

    <rule ref="Generic.WhiteSpace.ScopeIndent.IncorrectExact">
        <exclude-pattern>Transaction/Domain/UserType.php</exclude-pattern>
    </rule>
    <rule ref="Generic.WhiteSpace.ScopeIndent.Incorrect">
        <exclude-pattern>Transaction/Domain/UserType.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.PropertyTypeHint.MissingNativeTypeHint">
        <exclude-pattern>Transaction/Infra/Eloquent/*.php</exclude-pattern>
    </rule>
</ruleset>
